---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import MainGridLayout from "../../layouts/MainGridLayout.astro";
import PostMeta from "../../components/PostMeta.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// 获取与该项目关联的文章
const posts = await getCollection("posts");
const relatedPosts = posts.filter(post => 
  post.data.project === project.slug && !post.data.draft
).sort((a, b) => b.data.published.getTime() - a.data.published.getTime());

// 格式化日期
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};

// 获取状态颜色
const getStatusColor = (status: string) => {
  const colors = {
    '进行中': 'status-in-progress',
    '已完成': 'status-completed',
    '暂停': 'status-paused',
    '计划中': 'status-planned'
  };
  return colors[status as keyof typeof colors] || colors['进行中'];
};
---

<Layout title={project.data.title}>
  <MainGridLayout>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative mb-4">
      <div class="card-base z-10 px-6 md:px-9 pt-6 pb-4 relative w-full">
      <!-- 项目头部信息 -->
      <header class="mb-8">
        <div class="flex items-center gap-3 mb-4">
          <h1 class="text-3xl font-bold text-90">
            {project.data.title}
          </h1>
          <span class={`px-3 py-1 rounded-full text-sm font-medium ${getStatusColor(project.data.status || '进行中')}`}>
            {project.data.status || '进行中'}
          </span>
        </div>
        
        <p class="text-lg text-75 mb-6">
          {project.data.description}
        </p>

        <!-- 项目元信息 -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <div class="bg-[var(--btn-regular-bg)] p-4 rounded-lg">
            <h3 class="font-semibold text-90 mb-2">项目进度</h3>
            <div class="w-full bg-[var(--card-bg)] rounded-full h-2">
              <div 
                class="bg-[var(--primary)] h-2 rounded-full transition-all duration-300"
                style={`width: ${project.data.progress}%`}
              ></div>
            </div>
            <span class="text-sm text-50 mt-1 block">
              {project.data.progress}% 完成
            </span>
          </div>

          <div class="bg-[var(--btn-regular-bg)] p-4 rounded-lg">
            <h3 class="font-semibold text-90 mb-2">开始时间</h3>
            <p class="text-75">
              {formatDate(project.data.startDate)}
            </p>
          </div>

          <div class="bg-[var(--btn-regular-bg)] p-4 rounded-lg">
            <h3 class="font-semibold text-90 mb-2">最后更新</h3>
            <p class="text-75">
              {formatDate(project.data.lastUpdate)}
            </p>
          </div>
        </div>

        <!-- 项目标签 -->
        {project.data.tags && project.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {project.data.tags.map((tag) => (
              <span class="px-3 py-1 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-full text-sm">
                {tag}
              </span>
            ))}
          </div>
        )}

        <!-- 外部链接 -->
        {(project.data.links?.github || project.data.links?.demo || project.data.links?.documentation || project.data.url) && (
          <div class="flex flex-wrap gap-3 mb-8">
            {project.data.links?.github && (
              <a 
                href={project.data.links.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-lg hover:bg-[var(--btn-regular-bg-hover)] transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                </svg>
                源码
              </a>
            )}
            
            {(project.data.links?.demo || project.data.demoUrl) && (
              <a 
                href={project.data.links?.demo || project.data.demoUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-[var(--primary)] text-white rounded-lg hover:bg-[var(--primary-hover)] transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                演示
              </a>
            )}

            {project.data.links?.documentation && (
              <a 
                href={project.data.links.documentation} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-lg hover:bg-[var(--btn-regular-bg-hover)] transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                文档
              </a>
            )}

            {project.data.url && !project.data.links?.demo && !project.data.demoUrl && (
              <a 
                href={project.data.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-lg hover:bg-[var(--btn-regular-bg-hover)] transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                访问
              </a>
            )}
          </div>
        )}
      </header>

      <!-- 项目详细描述 -->
      <section class="mb-12">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
        </div>
      </section>

      <!-- 技术栈 -->
      {project.data.technologies && project.data.technologies.length > 0 && (
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-90 mb-6">技术栈</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {project.data.technologies.map((tech) => (
              <div class="flex items-center p-3 bg-[var(--btn-regular-bg)] rounded-lg">
                {tech.icon && (
                  <img src={tech.icon} alt={tech.name} class="w-6 h-6 mr-3" />
                )}
                <span class="text-[var(--btn-content)] font-medium">{tech.name}</span>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- 项目特性 -->
      {project.data.features && project.data.features.length > 0 && (
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-90 mb-6">主要特性</h2>
          <ul class="space-y-3">
            {project.data.features.map((feature) => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-[var(--primary)] mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-75">{feature}</span>
              </li>
            ))}
          </ul>
        </section>
      )}

      <!-- 项目参与人员 -->
      {project.data.contributors && project.data.contributors.length > 0 && (
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-90 mb-6">项目成员</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {project.data.contributors.map((contributor) => (
              <div class="flex items-center p-4 bg-[var(--btn-regular-bg)] rounded-lg">
                {contributor.avatar && (
                  <img 
                    src={contributor.avatar} 
                    alt={contributor.name}
                    class="w-12 h-12 rounded-full mr-4"
                  />
                )}
                <div class="flex-1">
                  <h3 class="font-semibold text-[var(--btn-content)]">
                    {contributor.name}
                  </h3>
                  {contributor.role && (
                    <p class="text-sm text-75">
                      {contributor.role}
                    </p>
                  )}
                </div>
                {contributor.github && (
                  <a 
                    href={contributor.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-75 hover:text-90"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                    </svg>
                  </a>
                )}
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- 相关文章 -->
      {relatedPosts.length > 0 && (
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-90 mb-6">
            项目文章 ({relatedPosts.length})
          </h2>
          <div class="space-y-4">
            {relatedPosts.map((post) => (
              <article class="border border-[var(--line-divider)] rounded-lg p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold mb-2">
                      <a 
                        href={`/posts/${post.slug}`}
                        class="text-90 hover:text-[var(--primary)] transition-colors"
                      >
                        {post.data.title}
                      </a>
                    </h3>
                    {post.data.description && (
                      <p class="text-75 mb-3">
                        {post.data.description}
                      </p>
                    )}
                    <div class="flex items-center text-sm text-60">
                      <time datetime={post.data.published.toISOString()}>
                        {formatDate(post.data.published)}
                      </time>
                      {post.data.tags && post.data.tags.length > 0 && (
                        <>
                          <span class="mx-2">•</span>
                          <div class="flex flex-wrap gap-1">
                            {post.data.tags.slice(0, 3).map((tag) => (
                              <span class="px-2 py-1 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded text-xs">
                                {tag}
                              </span>
                            ))}
                            {post.data.tags.length > 3 && (
                              <span class="text-60 text-xs">
                                +{post.data.tags.length - 3}
                              </span>
                            )}
                          </div>
                        </>
                      )}
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- 返回项目列表 -->
      <div class="text-center">
        <a 
          href="/projects"
          class="inline-flex items-center px-6 py-3 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-lg hover:bg-[var(--btn-regular-bg-hover)] transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          返回项目列表
        </a>
      </div>
      </div>
    </div>
  </MainGridLayout>
</Layout>

