---
import type { GetStaticPaths } from "astro";
import ArchiveHomePage from "../components/ArchiveHomePage.astro";
import { PAGE_SIZE } from "../constants/constants";
import FullScreenLayout from "../layouts/FullScreenLayout.astro";
import { getSortedPosts } from "../utils/content-utils";

export const getStaticPaths = (async ({ paginate }) => {
	const allBlogPosts = await getSortedPosts();
	// 从第2页开始分页，因为第1页现在是首页
	const paginatedPosts = paginate(allBlogPosts, { pageSize: PAGE_SIZE });
	// 过滤掉第1页，只返回第2页及以后的页面
	return paginatedPosts.filter(({ params }) => params.page !== undefined);
}) satisfies GetStaticPaths;
// https://github.com/withastro/astro/issues/6507#issuecomment-1489916992

const { page } = Astro.props;
---

<FullScreenLayout>
    <ArchiveHomePage></ArchiveHomePage>
</FullScreenLayout>