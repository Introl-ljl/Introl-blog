---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import ProjectFilter from "../components/ProjectFilter.svelte";
import ProjectCard from "../components/ProjectCard.astro";
import StatusBadge from "../components/StatusBadge.astro";
import ProgressBar from "../components/ProgressBar.astro";
import { Icon } from "astro-icon/components";

const projects = await getCollection("projects");
const posts = await getCollection("posts");

// 处理项目数据，添加默认分类
const processedProjects = projects.map(project => ({
  ...project,
  data: {
    ...project.data,
    category: project.data.category || '其他',
    tags: project.data.tags || []
  }
}));

// 按项目分组文章
const postsByProject = posts.reduce((acc, post) => {
  if (post.data.project && !post.data.draft) {
    const projectName = post.data.project;
    if (!acc[projectName]) {
      acc[projectName] = [];
    }
    acc[projectName].push(post);
  }
  return acc;
}, {} as Record<string, typeof posts>);

// 为每个项目添加关联文章
const projectsWithPosts = processedProjects.map(project => ({
  ...project,
  relatedPosts: postsByProject[project.data.title] || []
}));

// 按分类分组项目
const projectsByCategory = projectsWithPosts.reduce((acc: any, project: any) => {
  const category = project.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(project);
  return acc;
}, {});

// 获取所有分类
const categories = Object.keys(projectsByCategory);

// 按年份分组项目
const projectsByYear = projectsWithPosts.reduce((acc: any, project: any) => {
  const year = new Date(project.data.lastUpdate).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(project);
  return acc;
}, {});

// 获取所有年份并排序
const years = Object.keys(projectsByYear).sort((a, b) => Number.parseInt(b) - Number.parseInt(a));

// 获取所有标签
const allTags = [...new Set(projectsWithPosts.flatMap((project: any) => project.data.tags || []))];

// 格式化日期
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};

// 获取状态颜色
const getStatusColor = (status: string) => {
  const colors = {
    '进行中': 'status-in-progress',
    '已完成': 'status-completed',
    '暂停': 'status-paused',
    '计划中': 'status-planned',
    '即将完成': 'status-nearly-done'
  };
  return colors[status as keyof typeof colors] || colors['计划中'];
};
---

<Layout title="项目展示">
  <MainGridLayout>
    <div class="max-w-6xl mx-auto">
      <!-- 页面标题 -->
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          项目展示
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          探索我的技术项目，从概念到实现的完整旅程
        </p>
      </header>

      <!-- 项目筛选器 -->
      <div class="mb-8">
        <ProjectFilter 
          client:load
          categories={categories}
          tags={allTags}
        />
      </div>

      <!-- 视图切换按钮 -->
      <div class="flex justify-center mb-8">
        <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-1">
          <button 
            id="category-view-btn"
            class="px-4 py-2 rounded-md text-sm font-medium transition-colors bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm"
          >
            分类视图
          </button>
          <button 
            id="timeline-view-btn"
            class="px-4 py-2 rounded-md text-sm font-medium transition-colors text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white"
          >
            时间线视图
          </button>
        </div>
      </div>

      <!-- 分类视图 -->
      <div id="category-view" class="space-y-12">
        {categories.map((category) => (
          <section data-category={category}>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
              <span class="w-1 h-6 bg-blue-600 rounded-full mr-3"></span>
              {category}
              <span class="ml-2 text-sm font-normal text-gray-500 dark:text-gray-400">
                ({projectsByCategory[category].length})
              </span>
            </h2>
            <div class="space-y-8">
              {projectsByCategory[category].map((project: any) => (
                <div class="bg-[var(--card-bg)] rounded-lg shadow-lg overflow-hidden border border-[var(--line-divider)]">
                  <!-- 项目信息区域 -->
                  <div class="p-6 border-b border-[var(--line-divider)]">
                    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-3">
                          <h3 class="text-xl font-bold text-90">
                            <a href={`/projects/${project.slug}/`} class="hover:text-[var(--primary)] transition-colors">
                              {project.data.title}
                            </a>
                          </h3>
                          <StatusBadge status={project.data.status} />
                        </div>
                        <p class="text-75 mb-4">{project.data.description}</p>
                        <div class="flex flex-wrap gap-2 mb-4">
                          {project.data.tags?.map((tag: string) => (
                            <span class="px-2 py-1 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] text-xs rounded-full">
                              {tag}
                            </span>
                          ))}
                        </div>
                        <div class="space-y-3">
                          <div class="flex items-center text-sm text-50">
                            <Icon name="material-symbols:schedule" class="w-4 h-4 mr-2" />
                            <span>最后更新: {formatDate(project.data.lastUpdate)}</span>
                          </div>
                          {project.data.progress && (
                            <div class="space-y-2">
                              <div class="flex items-center justify-between text-sm">
                                <span class="text-60">项目进度</span>
                                <span class="font-medium text-90">{project.data.progress}%</span>
                              </div>
                              <ProgressBar progress={project.data.progress} showLabel={false} />
                            </div>
                          )}
                        </div>
                      </div>
                      <div class="flex gap-2">
                        {project.data.links?.github && (
                          <a href={project.data.links.github} target="_blank" rel="noopener noreferrer" 
                             class="px-3 py-2 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-md hover:bg-[var(--btn-regular-bg-hover)] transition-colors text-sm">
                            <Icon name="fa6-brands:github" class="w-4 h-4 inline mr-1" />
                            GitHub
                          </a>
                        )}
                        {project.data.links?.demo && (
                          <a href={project.data.links.demo} target="_blank" rel="noopener noreferrer"
                             class="px-3 py-2 bg-[var(--primary)] text-white rounded-md hover:bg-[var(--primary)]/90 transition-colors text-sm">
                            <Icon name="material-symbols:open-in-new" class="w-4 h-4 inline mr-1" />
                            演示
                          </a>
                        )}
                      </div>
                    </div>
                  </div>
                  
                  <!-- 关联文章区域 -->
                  {project.relatedPosts.length > 0 && (
                    <div class="p-6">
                      <h4 class="text-lg font-semibold text-90 mb-4 flex items-center">
                        <Icon name="material-symbols:description" class="w-5 h-5 mr-2 text-[var(--primary)]" />
                        相关文章 ({project.relatedPosts.length})
                      </h4>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {project.relatedPosts.map((post: any) => (
                          <a href={`/posts/${post.slug}/`} 
                             class="block p-4 bg-[var(--btn-regular-bg)] rounded-lg hover:bg-[var(--btn-regular-bg-hover)] transition-colors group">
                            <h5 class="font-medium text-90 group-hover:text-[var(--primary)] mb-2">
                              {post.data.title}
                            </h5>
                            <div class="flex items-center justify-between text-sm text-50">
                              <span class="flex items-center">
                                <Icon name="material-symbols:calendar-today" class="w-4 h-4 mr-1" />
                                {formatDate(post.data.pubDate)}
                              </span>
                              {post.data.tags && post.data.tags.length > 0 && (
                                <div class="flex gap-1">
                                  {post.data.tags.slice(0, 2).map((tag: string) => (
                                    <span class="px-2 py-0.5 bg-[var(--btn-card-bg-hover)] text-[var(--btn-content)] text-xs rounded">
                                      {tag}
                                    </span>
                                  ))}
                                  {post.data.tags.length > 2 && (
                                    <span class="text-xs text-30">+{post.data.tags.length - 2}</span>
                                  )}
                                </div>
                              )}
                            </div>
                          </a>
                        ))}
                      </div>
                    </div>
                  )}
                  
                  {project.relatedPosts.length === 0 && (
                    <div class="p-6 text-center text-50">
                      <Icon name="material-symbols:description-outline" class="w-8 h-8 mx-auto mb-2 opacity-50" />
                      <p class="text-sm">暂无相关文章</p>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </section>
        ))}
      </div>

      <!-- 时间线视图 -->
      <div id="timeline-view" class="hidden space-y-12">
        {years.map((year) => (
          <section data-year={year}>
            <h2 class="text-2xl font-bold text-90 mb-6 flex items-center">
              <span class="w-1 h-6 bg-[var(--primary)] rounded-full mr-3"></span>
              {year} 年
              <span class="ml-2 text-sm font-normal text-50">
                ({projectsByYear[year].length} 个项目)
              </span>
            </h2>
            <div class="space-y-8">
              {projectsByYear[year].map((project: any) => (
                <div class="bg-[var(--card-bg)] rounded-lg shadow-lg overflow-hidden border border-[var(--line-divider)]">
                  <!-- 项目信息区域 -->
                  <div class="p-6 border-b border-[var(--line-divider)]">
                    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-3">
                          <h3 class="text-xl font-bold text-90">
                            <a href={`/projects/${project.slug}/`} class="hover:text-[var(--primary)] transition-colors">
                              {project.data.title}
                            </a>
                          </h3>
                          <StatusBadge status={project.data.status} />
                        </div>
                        <p class="text-75 mb-4">{project.data.description}</p>
                        <div class="flex flex-wrap gap-2 mb-4">
                          {project.data.tags?.map((tag: string) => (
                            <span class="px-2 py-1 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] text-xs rounded-full">
                              {tag}
                            </span>
                          ))}
                        </div>
                        <div class="space-y-3">
                          <div class="flex items-center text-sm text-50">
                            <Icon name="material-symbols:schedule" class="w-4 h-4 mr-2" />
                            <span>最后更新: {formatDate(project.data.lastUpdate)}</span>
                          </div>
                          {project.data.progress && (
                            <div class="space-y-2">
                              <div class="flex items-center justify-between text-sm">
                                <span class="text-60">项目进度</span>
                                <span class="font-medium text-90">{project.data.progress}%</span>
                              </div>
                              <ProgressBar progress={project.data.progress} showLabel={false} />
                            </div>
                          )}
                        </div>
                      </div>
                      <div class="flex gap-2">
                        {project.data.links?.github && (
                          <a href={project.data.links.github} target="_blank" rel="noopener noreferrer" 
                             class="px-3 py-2 bg-[var(--btn-regular-bg)] text-[var(--btn-content)] rounded-md hover:bg-[var(--btn-regular-bg-hover)] transition-colors text-sm">
                            <Icon name="fa6-brands:github" class="w-4 h-4 inline mr-1" />
                            GitHub
                          </a>
                        )}
                        {project.data.links?.demo && (
                          <a href={project.data.links.demo} target="_blank" rel="noopener noreferrer"
                             class="px-3 py-2 bg-[var(--primary)] text-white rounded-md hover:bg-[var(--primary)] hover:opacity-80 transition-all text-sm">
                            <Icon name="material-symbols:open-in-new" class="w-4 h-4 inline mr-1" />
                            演示
                          </a>
                        )}
                      </div>
                    </div>
                  </div>
                  
                  <!-- 关联文章区域 -->
                  {project.relatedPosts.length > 0 && (
                    <div class="p-6">
                      <h4 class="text-lg font-semibold text-90 mb-4 flex items-center">
                        <Icon name="material-symbols:description" class="w-5 h-5 mr-2 text-[var(--primary)]" />
                        相关文章 ({project.relatedPosts.length})
                      </h4>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {project.relatedPosts.map((post: any) => (
                          <a href={`/posts/${post.slug}/`} 
                             class="block p-4 bg-[var(--btn-regular-bg)] rounded-lg hover:bg-[var(--btn-regular-bg-hover)] transition-colors group">
                            <h5 class="font-medium text-90 group-hover:text-[var(--primary)] mb-2">
                              {post.data.title}
                            </h5>
                            <div class="flex items-center justify-between text-sm text-50">
                              <span class="flex items-center">
                                <Icon name="material-symbols:calendar-today" class="w-4 h-4 mr-1" />
                                {formatDate(post.data.pubDate)}
                              </span>
                              {post.data.tags && post.data.tags.length > 0 && (
                                <div class="flex gap-1">
                                  {post.data.tags.slice(0, 2).map((tag: string) => (
                                    <span class="px-2 py-0.5 bg-[var(--btn-card-bg-hover)] text-[var(--btn-content)] text-xs rounded">
                                      {tag}
                                    </span>
                                  ))}
                                  {post.data.tags.length > 2 && (
                                    <span class="text-xs text-30">+{post.data.tags.length - 2}</span>
                                  )}
                                </div>
                              )}
                            </div>
                          </a>
                        ))}
                      </div>
                    </div>
                  )}
                  
                  {project.relatedPosts.length === 0 && (
                    <div class="p-6 text-center text-gray-500 dark:text-gray-400">
                      <Icon name="material-symbols:description-outline" class="w-8 h-8 mx-auto mb-2 opacity-50" />
                      <p class="text-sm">暂无相关文章</p>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </section>
        ))}
      </div>
    </div>
  </MainGridLayout>
</Layout>

  <script>
    // 项目筛选逻辑
    document.addEventListener('DOMContentLoaded', () => {
      const projectFilter = document.querySelector('project-filter');
      const categoryViewBtn = document.getElementById('category-view-btn') as HTMLButtonElement;
      const timelineViewBtn = document.getElementById('timeline-view-btn') as HTMLButtonElement;
      const categoryView = document.getElementById('category-view') as HTMLElement;
      const timelineView = document.getElementById('timeline-view') as HTMLElement;
      
      // 视图切换功能
      categoryViewBtn?.addEventListener('click', () => {
        categoryView.classList.remove('hidden');
        timelineView.classList.add('hidden');
        
        // 激活分类视图按钮
        categoryViewBtn.classList.remove('text-gray-600', 'dark:text-gray-400');
        categoryViewBtn.classList.add('bg-white', 'dark:bg-gray-700', 'text-gray-900', 'dark:text-white', 'shadow-sm');
        
        // 取消激活时间线视图按钮
        timelineViewBtn.classList.remove('bg-white', 'dark:bg-gray-700', 'text-gray-900', 'dark:text-white', 'shadow-sm');
        timelineViewBtn.classList.add('text-gray-600', 'dark:text-gray-400');
      });
      
      timelineViewBtn?.addEventListener('click', () => {
        timelineView.classList.remove('hidden');
        categoryView.classList.add('hidden');
        
        // 激活时间线视图按钮
        timelineViewBtn.classList.remove('text-gray-600', 'dark:text-gray-400');
        timelineViewBtn.classList.add('bg-white', 'dark:bg-gray-700', 'text-gray-900', 'dark:text-white', 'shadow-sm');
        
        // 取消激活分类视图按钮
        categoryViewBtn.classList.remove('bg-white', 'dark:bg-gray-700', 'text-gray-900', 'dark:text-white', 'shadow-sm');
        categoryViewBtn.classList.add('text-gray-600', 'dark:text-gray-400');
      });
      
      if (projectFilter) {
        projectFilter.addEventListener('filter', (event: Event) => {
          const customEvent = event as CustomEvent;
          const { category, tag, search } = customEvent.detail;
          filterProjects(category, tag, search);
        });
      }
      
      function filterProjects(selectedCategory: string, selectedTag: string, searchQuery: string) {
        const categorySections = document.querySelectorAll('.category-section') as NodeListOf<HTMLElement>;
        const yearSections = document.querySelectorAll('.year-section') as NodeListOf<HTMLElement>;
        const projectItems = document.querySelectorAll('.project-item') as NodeListOf<HTMLElement>;
        
        // 隐藏所有分类和年份标题
        categorySections.forEach(section => {
          section.style.display = 'none';
        });
        yearSections.forEach(section => {
          section.style.display = 'none';
        });
        
        let hasVisibleProjects = false;
        
        projectItems.forEach(item => {
          const itemCategory = item.dataset.category || '';
          const itemTags = JSON.parse(item.dataset.tags || '[]');
          const itemName = item.dataset.name || '';
          const itemDescription = item.dataset.description || '';
          
          let shouldShow = true;
          
          // 分类筛选
          if (selectedCategory && itemCategory !== selectedCategory) {
            shouldShow = false;
          }
          
          // 标签筛选
          if (selectedTag && !itemTags.includes(selectedTag)) {
            shouldShow = false;
          }
          
          // 搜索筛选
          if (searchQuery) {
            const query = searchQuery.toLowerCase();
            if (!itemName.includes(query) && !itemDescription.includes(query)) {
              shouldShow = false;
            }
          }
          
          if (shouldShow) {
            item.style.display = 'block';
            hasVisibleProjects = true;
            
            // 显示对应的分类或年份标题
            const categorySection = document.querySelector(`[data-category="${itemCategory}"]`) as HTMLElement;
            if (categorySection) {
              categorySection.style.display = 'block';
            }
            
            // 对于时间线视图，也要显示年份标题
            const yearSection = item.closest('.year-section') as HTMLElement;
            if (yearSection) {
              yearSection.style.display = 'block';
            }
          } else {
            item.style.display = 'none';
          }
        });
        
        // 如果没有可见项目，显示提示信息
        if (!hasVisibleProjects) {
          // 可以在这里添加"没有找到项目"的提示
        }
      }
    });
  </script>
</MainGridLayout>